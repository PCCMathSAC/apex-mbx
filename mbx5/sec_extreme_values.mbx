\addplot [thick,{\colorone},smooth,domain=-1:5] {2*x^3-9*x^2};

\filldraw [thick,{\colorone}] (axis cs:5,25) node [black,above] {\tiny$(5,25)$} circle (1pt);
\filldraw [thick,{\colorone}] (axis cs:-1., -11) circle (1pt);
