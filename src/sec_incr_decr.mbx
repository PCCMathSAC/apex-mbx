\draw (3.75,.5) node {\scriptsize \parbox{50pt}{\centering $\fp>0$ \ incr}};

\draw (-2.5,.75) node {\scriptsize\parbox{15pt}{\centering rel. max}};
\draw (2.5,.75) node {\scriptsize\parbox{15pt}{\centering rel. min}};
